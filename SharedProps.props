<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <!-- We add the CodeAnalysis package -->
    <EnableNETAnalyzers Condition="'$(EnableNETAnalyzers)' == ''">true</EnableNETAnalyzers>
    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <AnalysisLevel>5.0</AnalysisLevel>
    <!-- We include our own analyzers -->
    <EnforceCodeStyleInBuild Condition="'$(EnforceCodeStyleInBuild)' == 'false'">false</EnforceCodeStyleInBuild>
    
    <DefaultCSharpLangVersion>9</DefaultCSharpLangVersion>
  </PropertyGroup>
  
</Project>